{
    "semi": false,
    "singleQuote": true,
    "plugins": [
        "prettier-plugin-tailwindcss",
        "@shufo/prettier-plugin-blade"
    ],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "printWidth": 80,
                "tabWidth": 4,
                "sortTailwindcssClasses": true
            }
        }
    ]
}
